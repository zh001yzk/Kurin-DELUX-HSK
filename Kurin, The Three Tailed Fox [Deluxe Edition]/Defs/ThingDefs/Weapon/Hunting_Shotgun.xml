<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Kurin_Gun_Hunting_Shotgun</defName>
    <label>魅狐猎枪</label>
    <description>在魅狐的母星是禁止狩猎狐狸的，但也存在着魅狐猎人，他们喜欢用猎枪猎杀鹿、兔子和熊等生物的后代。</description>
    <graphicData>
      <texPath>Kurin/Weapon/Hunting_Shotgun/Texture</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedAngleOffset>45</equippedAngleOffset>
    <soundInteract>Kurin_Sound_Hunting_Shotgun_Interact</soundInteract>
    <statBases>
      <WorkToMake>18000</WorkToMake>
      <Mass>4.8</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.60</AccuracyLong>
    </statBases>
    <weaponTags Inherit="False">
      <li>Kurin_Hunting_Shotgun</li>
    </weaponTags>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>Kurin_WeaponT2</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingCategories>
      <li>Kurin_Weapon_Ranged</li>
    </thingCategories>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Kurin_Bullet_Hunting_Shotgun</defaultProjectile>
        <warmupTime>1</warmupTime>
        <range>25.9</range>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>30</ticksBetweenBurstShots>
        <soundCast>Kurin_Sound_Hunting_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.02</cooldownTime>
        <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Kurin_Bullet_Hunting_Shotgun</defName>
    <label>猎枪子弹</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>24</damageAmountBase>
      <armorPenetrationBase>0.33</armorPenetrationBase>
      <stoppingPower>3</stoppingPower>
      <speed>80</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
  <SoundDef>
    <defName>Kurin_Sound_Hunting_Shotgun</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Kurin/Hunting_Shotgun</clipPath>
          </li>
        </grains>
      </li>
    </subSounds>
  </SoundDef>
  <SoundDef>
    <defName>Kurin_Sound_Hunting_Shotgun_Interact</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Kurin/Hunting_Shotgun_Interact</clipPath>
          </li>
        </grains>
      </li>
    </subSounds>
  </SoundDef>
</Defs>