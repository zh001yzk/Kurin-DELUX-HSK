<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Kurin_Gun_Sniper_Charge_Rifle</defName>
    <label>魅狐狙击手冲锋步枪</label>
    <description>“单次进攻”是库林人的一种超现代狙击手冲锋武器，创建于魅狐间隔时代初期，专为魅狐精英部队设计。</description>
    <graphicData>
      <texPath>Kurin/Weapon/Sniper_Charge_Rifle/Texture</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Spacer</techLevel>
    <equippedAngleOffset>45</equippedAngleOffset>
    <soundInteract>Kurin_Sound_Sniper_Charge_Rifle_Interact</soundInteract>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToMake>64000</WorkToMake>
      <Mass>6.8</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.85</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
    </statBases>
    <weaponTags Inherit="False">
      <li>Kurin_Charge_Guns</li>
    </weaponTags>
    <costList>
      <Plasteel>65</Plasteel>
      <ComponentSpacer>4</ComponentSpacer>
      <Uranium>20</Uranium>
    </costList>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
      <researchPrerequisite>Kurin_WeaponT5</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingCategories>
      <li>Kurin_Weapon_Ranged</li>
    </thingCategories>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <weaponClasses>
      <li>LongShots</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Kurin_Bullet_Sniper_Charge_Rifle</defaultProjectile>
        <warmupTime>2.5</warmupTime>
        <range>40.9</range>
        <soundCast>Kurin_Sound_Sniper_Charge_Rifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <soundAiming>Kurin_Sound_Sniper_Charge_Rifle_Aiming</soundAiming>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Kurin_Bullet_Sniper_Charge_Rifle</defName>
    <label>魅狐狙击手冲锋步枪射击</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>33</damageAmountBase>
      <armorPenetrationBase>1.15</armorPenetrationBase>
      <stoppingPower>1.5</stoppingPower>
      <speed>110</speed>
    </projectile>
    <graphicData>
      <texPath>Kurin/Projectile/Sniper_Charge_Rifle_Bullet/Texture</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
  </ThingDef>
  <SoundDef>
    <defName>Kurin_Sound_Sniper_Charge_Rifle</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Kurin/Sniper_Charge_Rifle</clipPath>
          </li>
        </grains>
      </li>
    </subSounds>
  </SoundDef>
  <SoundDef>
    <defName>Kurin_Sound_Sniper_Charge_Rifle_Interact</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Kurin/Sniper_Charge_Rifle_Interact</clipPath>
          </li>
        </grains>
      </li>
    </subSounds>
  </SoundDef>
  <SoundDef>
    <defName>Kurin_Sound_Sniper_Charge_Rifle_Aiming</defName>
    <sustain>true</sustain>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <priorityMode>PrioritizeNearest</priorityMode>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Kurin/Aiming/Sniper_Charge_Rifle</clipPath>
          </li>
        </grains>
        <tempoAffectedByGameSpeed>true</tempoAffectedByGameSpeed>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>
</Defs>