<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Kurin_Gun_Sniper_Rifle</defName>
    <label>魅狐狙击步枪</label>
    <description>[FXAR-A1] - [边锋]\n\n~ “边锋”是魅狐的新式狙击步枪，为精准射击而改装的。</description>
    <graphicData>
      <texPath>Kurin/Weapon/Sniper_Rifle/Texture</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedAngleOffset>45</equippedAngleOffset>
    <soundInteract>Kurin_Sound_Sniper_Rifle_Interact</soundInteract>
    <statBases>
      <WorkToMake>44000</WorkToMake>
      <Mass>4.7</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.85</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
    </statBases>
    <weaponTags Inherit="False">
      <li>Kurin_Sniper_Rifle</li>
    </weaponTags>
    <costList>
      <Steel>70</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>Kurin_WeaponT3</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingCategories>
      <li>Kurin_Weapon_Ranged</li>
    </thingCategories>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <weaponClasses>
      <li>LongShots</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Kurin_Bullet_Sniper_Rifle</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>40.9</range>
        <soundCast>Kurin_Sound_Sniper_Rifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <soundAiming>Kurin_Sound_Aiming</soundAiming>
      </li>
    </verbs>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.02</cooldownTime>
        <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Kurin_Bullet_Sniper_Rifle</defName>
    <label>狙击步枪子弹</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>22</damageAmountBase>
      <armorPenetrationBase>1.15</armorPenetrationBase>
      <stoppingPower>1.5</stoppingPower>
      <speed>110</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.2</drawSize>
    </graphicData>
  </ThingDef>
  <SoundDef>
    <defName>Kurin_Sound_Sniper_Rifle</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>Kurin/SR</clipFolderPath>
          </li>
        </grains>
      </li>
    </subSounds>
  </SoundDef>
  <SoundDef>
    <defName>Kurin_Sound_Sniper_Rifle_Interact</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Kurin/Sniper_Rifle_Interact</clipPath>
          </li>
        </grains>
      </li>
    </subSounds>
  </SoundDef>
</Defs>