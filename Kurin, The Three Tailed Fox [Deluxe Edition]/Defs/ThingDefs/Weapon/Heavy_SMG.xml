<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Kurin_Gun_Heavy_SMG</defName>
    <label>魅狐重型冲锋枪</label>
    <description>[FXHSMG-A1] - [骗术师]\n\n~ “骗术师”是常见的符合人体工程学的魅狐重型冲锋枪。</description>
    <graphicData>
      <texPath>Kurin/Weapon/Heavy_SMG/Texture</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Kurin_Sound_Heavy_SMG_Interact</soundInteract>
    <statBases>
      <WorkToMake>32000</WorkToMake>
      <Mass>3.8</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.55</AccuracyLong>
    </statBases>
    <weaponTags Inherit="False">
      <li>Kurin_Heavy_SMG</li>
      <li>Kurin_Advanced_Guns</li>
    </weaponTags>
    <costList>
      <Steel>65</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>Kurin_WeaponT3</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingCategories>
      <li>Kurin_Weapon_Ranged</li>
    </thingCategories>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Kurin_Bullet_Heavy_SMG</defaultProjectile>
        <warmupTime>0.8</warmupTime>
        <range>25.9</range>
        <burstShotCount>6</burstShotCount>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>Kurin_Sound_Heavy_SMG</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.02</cooldownTime>
        <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Kurin_Bullet_Heavy_SMG</defName>
    <label>冲锋枪子弹</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
      <speed>80</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
  <SoundDef>
    <defName>Kurin_Sound_Heavy_SMG</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Kurin/Heavy_SMG</clipPath>
          </li>
        </grains>
      </li>
    </subSounds>
  </SoundDef>
  <SoundDef>
    <defName>Kurin_Sound_Heavy_SMG_Interact</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Kurin/Heavy_SMG_Interact</clipPath>
          </li>
        </grains>
      </li>
    </subSounds>
  </SoundDef>
</Defs>