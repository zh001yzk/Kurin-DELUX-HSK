<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Kurin_Special_Rocket_Launcher_Typhoon</defName>
    <label>魅狐火箭筒（台风）</label>
    <description>[FXTRL-A1] - [台风]\n\n~ “台风”是一种新式可重复使用的魅狐肩射导弹发射器，使用小型爆炸物发射。</description>
    <graphicData>
      <texPath>Kurin/Weapon/Rocket_Launcher_Various/Texture</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Kurin_Sound_Rocket_Launcher_Interact</soundInteract>
    <statBases>
      <MaxHitPoints>125</MaxHitPoints>
      <WorkToMake>60000</WorkToMake>
      <Mass>11.8</Mass>
    </statBases>
    <weaponTags Inherit="False">
      <li>Kurin_Rocket_Launcher_Typhoon</li>
    </weaponTags>
    <costList>
      <Plasteel>15</Plasteel>
      <Steel>75</Steel>
      <Chemfuel>75</Chemfuel>
      <ComponentIndustrial>8</ComponentIndustrial>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <recipeMaker>
      <researchPrerequisite>Kurin_WeaponT4</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingCategories>
      <li>Kurin_Special</li>
    </thingCategories>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
    </thingSetMakerTags>
    <tickerType>Normal</tickerType>
    <relicChance>0</relicChance>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <equippedStatOffsets>
      <MoveSpeed>-0.25</MoveSpeed>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_ShootOneUse</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Kurin_Bullet_Rocket_Launcher_Typhoon</defaultProjectile>
        <warmupTime>2.2</warmupTime>
        <ai_AvoidFriendlyFireRadius>9</ai_AvoidFriendlyFireRadius>
        <minRange>16.9</minRange>
        <range>40.9</range>
        <forcedMissRadius>1.9</forcedMissRadius>
        <soundCast>Kurin_Sound_Rocket_Launcher_Various</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>24</muzzleFlashScale>
        <soundAiming>Kurin_Sound_Rocket_Launcher_Typhoon_Aiming</soundAiming>
        <onlyManualCast>true</onlyManualCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.02</cooldownTime>
        <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>6.9</explosiveRadius>
        <explosiveDamageType>EMP</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
    </comps>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Kurin_Bullet_Rocket_Launcher_Typhoon</defName>
    <label>魅狐火箭筒导弹</label>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Kurin_Damage_Rocket_Launcher_Typhoon</damageDef>
      <explosionRadius>6.9</explosionRadius>
      <speed>60</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Rocket_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>1.3</drawSize>
    </graphicData>
  </ThingDef>
  <DamageDef>
    <defName>Kurin_Damage_Rocket_Launcher_Typhoon</defName>
    <label>魅狐火箭筒导弹</label>
    <workerClass>KurinDeluxeEdition.DamageWorker_KurinDamageTyphoon</workerClass>
    <externalViolence>true</externalViolence>
    <isExplosive>true</isExplosive>
    <deathMessage>{0} has been EMPed to death.</deathMessage>
    <hediff>Burn</hediff>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Electric</impactSoundType>
    <defaultDamage>50</defaultDamage>
    <defaultStoppingPower>3</defaultStoppingPower>
    <defaultArmorPenetration>3</defaultArmorPenetration>
    <buildingDamageFactor>0.3</buildingDamageFactor>
    <plantDamageFactor>0.3</plantDamageFactor>
    <explosionAffectOutsidePartsOnly>false</explosionAffectOutsidePartsOnly>
    <makesBlood>false</makesBlood>
    <harmsHealth>true</harmsHealth>
    <explosionHeatEnergyPerCell>5</explosionHeatEnergyPerCell>
    <explosionCellFleck>BlastEMP</explosionCellFleck>
    <explosionColorEdge>(0.8, 0.8, 0.8, 0.8)</explosionColorEdge>
    <explosionInteriorFleck>ElectricalSpark</explosionInteriorFleck>
    <soundExplosion>Kurin_Sound_Rocket_Launcher_Typhoon_Hit</soundExplosion>
    <combatLogRules>Damage_EMP</combatLogRules>
  </DamageDef>
  <HediffDef ParentName="DiseaseBase">
    <defName>Kurin_Rocket_Launcher_Typhoon_Hediff</defName>
    <label>由魅狐台风火箭发射器导弹发射</label>
    <labelNoun>EMP</labelNoun>
    <description>魅狐台风火箭发射导弹电磁脉冲的负面影响。</description>
    <defaultLabelColor>(0.53, 0.83, 1.0)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>8000</min>
          <max>10000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.65</setMax>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <setMax>0.65</setMax>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <setMax>0.65</setMax>
          </li>
          <li>
            <capacity>Sight</capacity>
            <setMax>0.65</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <SoundDef>
    <defName>Kurin_Sound_Rocket_Launcher_Typhoon_Aiming</defName>
    <sustain>true</sustain>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <priorityMode>PrioritizeNearest</priorityMode>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Kurin/Aiming/Rocket_Launcher_Typhoon</clipPath>
          </li>
        </grains>
        <tempoAffectedByGameSpeed>true</tempoAffectedByGameSpeed>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>
  <SoundDef>
    <defName>Kurin_Sound_Rocket_Launcher_Typhoon_Hit</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Kurin/Rocket_Launcher_Typhoon_Hit</clipPath>
          </li>
        </grains>
      </li>
    </subSounds>
  </SoundDef>
</Defs>