<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Kurin_Gun_Pistol</defName>
    <label>魅狐手枪</label>
    <description>[FXP-A1] - [弹弓]\n\n~“弹弓”是普通且符合人体工程学的魅狐手枪。</description>
    <graphicData>
      <texPath>Kurin/Weapon/Pistol/Texture</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.5</uiIconScale>
    <soundInteract>Kurin_Sound_Pistol_Interact</soundInteract>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>0.85</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
    </statBases>
    <weaponTags Inherit="False">
      <li>Kurin_Pistol</li>
    </weaponTags>
    <costList>
      <Steel>30</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>Kurin_WeaponT2</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingCategories>
      <li>Kurin_Weapon_Ranged</li>
    </thingCategories>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Kurin_Bullet_Pistol</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>25.9</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>Kurin_Sound_Pistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.02</cooldownTime>
        <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Kurin_Bullet_Pistol</defName>
    <label>手枪子弹</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>10</damageAmountBase>
      <speed>80</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
  <SoundDef>
    <defName>Kurin_Sound_Pistol</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Kurin/Pistol</clipPath>
          </li>
        </grains>
      </li>
    </subSounds>
  </SoundDef>
  <SoundDef>
    <defName>Kurin_Sound_Pistol_Interact</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Kurin/Pistol_Interact</clipPath>
          </li>
        </grains>
      </li>
    </subSounds>
  </SoundDef>
</Defs>