<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Save Our Ship 2</li>
		</mods>
		<match Class="PatchOperationFindMod">
			<mods>
				<li>Kurin, The Three Tailed Fox [Deluxe Edition]</li>
			</mods>
			<match Class="PatchOperationSequence">
				<success>Always</success>
				<operations>
					<li Class="PatchOperationAdd">
						<xpath>/Defs/KurinDeluxeEdition.PowerArmor.KurinPowerArmorThingDef[defName="Kurin_Power_Armor"]/apparel</xpath>
						<value>
							<tags>
								<li>EVA</li>
							</tags>
						</value>
					</li>
					<li Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="Kurin_Power_Armor_Helmet"]/apparel</xpath>
						<value>
							<tags>
								<li>EVA</li>
							</tags>
						</value>
					</li>
					<li Class="PatchOperationAdd">
						<xpath>/Defs/KurinDeluxeEdition.PowerArmor.KurinPowerArmorThingDef[defName="Kurin_Heavy_Power_Armor"]/apparel</xpath>
						<value>
							<tags>
								<li>EVA</li>
							</tags>
						</value>
					</li>
					<li Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="Kurin_Heavy_Power_Armor_Helmet"]/apparel</xpath>
						<value>
							<tags>
								<li>EVA</li>
							</tags>
						</value>
					</li>
				</operations>
			</match>
		</match>
	</Operation>

</Patch>